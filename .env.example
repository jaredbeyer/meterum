# Database Configuration
POSTGRES_URL=postgresql://user:password@host:5432/meterum
POSTGRES_PRISMA_URL=postgresql://user:password@host:5432/meterum
POSTGRES_URL_NON_POOLING=postgresql://user:password@host:5432/meterum

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Authentication
JWT_SECRET=your-very-secure-secret-key-here-change-this-min-32-chars
NODE_API_KEY=your-node-api-key-here-change-this

# Security - CORS Origins (comma-separated)
# Production example: https://meterum.com,https://www.meterum.com,https://app.meterum.com
# Development: Leave empty to use default localhost origins
ALLOWED_ORIGINS=

# Application
NEXT_PUBLIC_API_URL=https://your-app.vercel.app
NODE_ENV=production

# Optional: Development
DEV_MODE=false
LOG_LEVEL=info